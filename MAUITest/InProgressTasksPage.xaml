<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITest.InProgressTasksPage"
             Title="InProgressTasksPage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView x:Name="InProgressTasksCollectionView" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Title}" FontSize="24"/>
                            <Label Text="{Binding Description}" FontSize="18"/>
                            <Label Text="{Binding DueDate}" FontSize="18"/>
                            <Label Text="{Binding Status}" FontSize="18"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>