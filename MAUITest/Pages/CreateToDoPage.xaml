<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm ="clr-namespace:MAUITest.ViewModels"
             x:Class="MAUITest.Pages.CreateToDoPage"
             x:DataType="vm:CreateToDoVM">
  <Grid RowDefinitions="*,auto">
    <VerticalStackLayout Grid.Row="0">
      <Entry Placeholder="Titel" Text="{Binding Todo.Title}"/>
      <Entry Placeholder="Beschreibung" Text="{Binding Todo.Description}"/>
      <DatePicker Date="{Binding Todo.Due}"/>
      <Picker SelectedIndex="{Binding Todo.Status}"/>
    </VerticalStackLayout>
    <Button Grid.Row="1" Text="HinzufÃ¼gen" Command="{Binding AddToDoCommand}"/>
  </Grid>
</ContentPage>